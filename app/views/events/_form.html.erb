<%= form_for @event do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, size: "10x1", class: "form-control" %>

  <%= f.label :date %>
  <%= f.date_field :date, size: "10x1", class: "form-control" %>

  <%= f.label :location %>
  <%= f.text_field :location, size: "10x1", class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "10x5", class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
