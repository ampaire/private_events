<%= form_for(@event) do |f| %>
  <%= f.label :date, class: "form-label" %>
  <%= f.date_select :date, placeholder: "mm/dd/yyyy", class: "form-text" %><br>

  <%= f.label :description, class: "form-label" %>
  <%= f.text_field :description, placeholder: "Enter event description", class: "form-text" %><br>

  <%= f.submit yield(:button_text), class: 'form-btn' %>
<% end %>