<h1>Sign In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: '#') do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <br />
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    <br />
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>